---
import Layout from "../../layouts/main.astro";
import { Button } from "@/components/ui/button";
import { MoveRight, CheckCircle, Clock, Shield, Star } from "lucide-react";
const content = {
	title: "Escaleras y Pasamanos - Andina Group E.I.R.L.",
	description:
		"Instalamos pasamanos y escaleras de todo tipo: rectos, curvos, helicoidales, flotantes, interiores y exteriores, en materiales como acero, aluminio o madera. Ofrecemos soluciones modernas y seguras, adaptadas a tus necesidades y espacios, tanto para proyectos residenciales como comerciales.",
	image: "https://aceroscrea.com/wp-content/uploads/2023/07/escaleras-modernas-de-herreria-con-escalones-de-lamina-antiderrapante-en-exterior-de-casa.jpg",
	jsonLd: {
		"@context": "https://schema.org",
		"@type": "Service",
		name: "Escaleras y Pasamanos",
		description:
			"Instalamos pasamanos y escaleras de todo tipo: rectos, curvos, helicoidales, flotantes, interiores y exteriores, en materiales como acero, aluminio o madera. Ofrecemos soluciones modernas y seguras, adaptadas a tus necesidades y espacios, tanto para proyectos residenciales como comerciales.",
		areaServed: "Huancayo, Perú",
		provider: { "@type": "Organization", name: "Andina Group E.I.R.L." }
	}
};
---

<Layout content={content}>
  <!-- Hero Section -->
  <div
    class="relative w-full h-[40vh] md:h-[70vh] flex items-center justify-center overflow-hidden"
  >
    <img
      src="https://img.edilportale.com/product-thumbs/b_Siller-Treppen_MONUMENTAL_rHXy8Ilw9X.jpeg"
      alt="Escaleras"
      class="absolute inset-0 w-full h-full object-cover object-center"
      style="height: 70vh;"
    />
    <div class="absolute inset-0 bg-black/60"></div>
    <div class="absolute left-0 md:left-60 bottom-10 z-10 p-8 md:p-12">
      <h2
        class="text-white text-5xl md:text-[80px] font-bold text-left drop-shadow-lg"
        data-aos="fade-up"
      >
        Escaleras y Pasamanos
      </h2>
    </div>
  </div>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-aos="fade-up">
    <div class="py-10 md:py-20">
      <h2 class="text-2xl md:text-4xl font-extralight">
        Descripción General
      </h2>
      <p class="text-base md:text-[20px] font-extralight py-4 md:py-5">
        En Andina Group E.I.R.L. ofrecemos servicios de escaleras y pasamanos, instalamos pasamanos y escaleras de todo tipo: rectos, curvos, helicoidales, flotantes, interiores y exteriores, en materiales como acero, aluminio o madera. Ofrecemos soluciones modernas y seguras, adaptadas a tus necesidades y espacios, tanto para proyectos residenciales como comerciales.
      </p>
    </div>
    <div>
      <h2 class="text-2xl md:text-4xl font-extralight">¿Qué está incluido?</h2>
      <p class="text-base md:text-[20px] font-extralight py-4 md:py-5">
        Este servicio de escaleras y pasamanos incluye: 
        <ul class="list-disc pl-4 md:pl-6 text-base md:text-lg font-extralight text-gray-700 space-y-2"> 
          <li>Instalación de pasamanos y escaleras.</li>
          <li>Instalación de tipo helicoidal.</li>
          <li>Instalación de tipo flotante.</li>
          <li>Instalación de tipo interior.</li>
          <li>Instalación de tipo exterior.</li>
          <li>Fabricación en materiales como acero, aluminio o madera.</li>
          <li>Garantía de calidad en la instalación.</li>
        </ul>
      </p>
    </div>
    <div class="py-10 md:py-20">
      <h2 class="text-2xl md:text-4xl font-extralight pb-6 md:pb-10">Algunos de nuestros trabajos:</h2>
      <img
        src="https://aceroscrea.com/wp-content/uploads/2023/07/escaleras-modernas-de-herreria-con-escalones-de-lamina-antiderrapante-en-exterior-de-casa.jpg"
        alt="Escaleras"
        class="w-full max-w-full md:max-w-3xl mx-auto object-cover object-center rounded-xl"
      />
    </div>
  </section>
</Layout>