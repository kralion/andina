---
import ContactForm from './ContactForm.tsx';
---

<section 
  class="relative bg-gradient-to-br from-red-900 via-gray-900 to-gray-800 text-white overflow-hidden max-w-7xl mx-auto rounded-xl md:10"
  style="background-image: url('https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?q=80&w=1380&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center;"
  data-aos="zoom-in"
>
  <div class="absolute inset-0 bg-gradient-to-br from-red-900 via-gray-900 to-gray-800 opacity-95 pointer-events-none rounded-xl"></div>
  <div class="relative z-10 mx-auto py-10 md:py-0 ">
    <div class="grid lg:grid-cols-2 items-center min-h-[80vh] md:p-10">
      <!-- Contenido Izquierdo -->
      <div class="space-y-8 p-4">
        <div class="space-y-6">
          <p class="text-lg text-gray-300 font-light">
            Estamos deseando trabajar con usted.
          </p>
          
          <h1 class="text-6xl lg:text-7xl font-bold leading-tight">
            Empecemos<br />
            tu proyecto
          </h1>
        </div>
        
        <div class="space-y-6 pt-12">
          <div>
            <h3 class="text-xl font-semibold mb-2">Tel√©fono: +51 922 355 411</h3>
            <hr class="w-20 border-white/30">
          </div>
          
          <address class="not-italic text-lg leading-relaxed text-gray-300">
            Av. Huaytapallana, Palian - Huancayo<br />
            <br />
            Paradero 1ro de mayo, Vilcacoto<br />
            <br />
            +51 922 355 411
          </address>
        </div>
      </div>
      
      <!-- Contenido Derecho - Formulario de Contacto -->
      <div>
        <ContactForm client:load />
      </div>
    </div>
  </div>
</section>