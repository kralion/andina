---
import { Button } from "@/components/ui/button";
import { MoveRight } from "lucide-react";

interface Props {
  limit?: number;
}
const { limit } = Astro.props;

const services = [
  {
    title: "Carpintería",
    slug: "carpinteria",
    description: "Ofrecemos servicios de carpintería en madera, fabricando muebles a medida como closets, reposteros, puertas, escritorios y más. Nos enfocamos en la calidad, el diseño personalizado y la durabilidad, adaptándonos a las necesidades de cada cliente para crear espacios funcionales y estéticos.",
    image: "https://images.unsplash.com/photo-1626081063434-79a2169791b1?q=80&w=1476&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    title: "Melamina",
    slug: "melamina",
    description: "Proveemos divisiones de melamina de alta calidad, ideales para separar ambientes en oficinas, hogares y comercios. Ofrecemos variedad de colores y texturas, adaptándonos a las necesidades de cada proyecto para lograr espacios funcionales y modernos.",
    image: "https://miroytengo.es/blog/wp-content/uploads/2018/06/miroytengo-que-es-melamina-muebles-1.jpg",
  },
  {
    title: "Cerrajería",
    slug: "cerrajeria",
    description: "Ofrecemos servicios de cerrajería, instalación y cambio de cerraduras, soldadura de chapas, instalación de rejas, ventanas, puertas y más. Adaptándonos a las necesidades de cada cliente para crear espacios funcionales y estéticos.",
    image: "https://images.unsplash.com/flagged/photo-1564767609213-c75ee685263a?q=80&w=1373&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    title: "Vidriería",
    slug: "vidrieria",
    description: "Instalamos ventanas serie y proyectantes, así como vidrios templados y crudos, ofreciendo soluciones modernas y resistentes para todo tipo de ambientes.",
    image: "https://cosmosglasssolution.com/Blog/wp-content/uploads/2018/11/vidrieria-elementos-mamparas-1024x464.jpg",
  },
  {
    title: "Drywall",
    slug: "drywall",
    description: "Ofrecemos soluciones de Drywall para divisiones, paredes y techos, con materiales de alta calidad y acabados profesionales, garantizando durabilidad y resistencia.",
    image: "https://st2.depositphotos.com/1723345/10224/i/450/depositphotos_102243078-stock-photo-plasterboard-walls-gypsum-wall-under.jpg",
  },
  {
  title: "Puertas y Portones",
    slug: "puertas-y-portones",
    description: "Fabricamos e instalamos puertas y portones: enrollables, enrollables con motor, automáticas, seccionales, diseño con inox e imitación madera. Todas nuestras soluciones se adaptan a tus necesidades, garantizando seguridad, estética y resistencia en cada proyecto.",
    image: "https://i.ibb.co/Kz3Y4bP1/puerta.jpg",
  },
  {
    title: "Decoración en Wall Panel",
    slug: "wall-panel",
    description: "Ofrecemos soluciones de Wall Panel para divisiones, paredes y techos, con materiales de alta calidad y acabados profesionales, garantizando durabilidad y resistencia.",
